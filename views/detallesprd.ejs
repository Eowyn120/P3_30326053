div.lista{
    box-shadow: 0 4px 8px #24262b, 0 6px 20px rgba(0,0,0,0,19);
    background:#24262b;
    margin: 10px;
    border-radius: 15px;

}

.lista {
  display: flex;
  flex-direction: column;
  background-color: #fff;
border: 1px solid #ccc;
}

.lista p img{
    width: 300px;
    height: 300px;
    object-fit: cover;
}


div.cuadricula {
    box-shadow: 0 4px 8px #24262b, 0 6px 20px rgba(0,0,0,0,19);
