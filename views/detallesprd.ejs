    margin: 10px;
    border-radius: 15px;
    margin-left: 100px;
    height: 700px;
}
.cuadricula{
    display: grid;
    margin-bottom: 10px;
    padding: 10px;
    background-color: #fff;
    border: 1px solid #ccc;
}

.cuadricula p img{
    width: 100px;
    height: 100px;
    object-fit: cover;
}


div.producto{
    text-align: center;
    padding: 10%;
}


.texto{
    color:#fff;
    text-align: center;
}
.responsive{
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
    gap: 16px;
}

.return-button {
            position: fixed;
            top: 20px;
            right: 20px;
            padding: 10px 20px;
            background-color: blue;
            color: white;
            border: none;
            border-radius: 4px;
            font-size: 16px;
            cursor: pointer;
        }

