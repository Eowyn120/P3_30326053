    <title>Registro Clientes</title>
</head>
<body>
    <form action="/register" method="post">
        <div>
            <div>
                <label for="email">Ingrese el correo</label>
                <input type="email" name="email" id="email" maxlength="30" minlength="8" placeholder="Ingrese su correo electronico" required>
            </div>
            <div>
                <label for="password">Ingrese su contrase単a</label>
                <input type="password" name="password1" id="password1" maxlength="16" minlength="8" placeholder="Ingrese su contrase単a" required>
            </div>
            <div>
                <label for="password2">Confirme su contrase単a</label>
                <input type="password" name="password2" id="password2" maxlength="16" minlength="8" placeholder="Confirme su contrase単a" required>
            </div>
            <div>
                <label for="preg_seg">Ingrese su pregunta de seguridad</label>
                <input type="text" name="preg_seg" id="preg_seg" maxlength="16" minlength="6" placeholder="Ingrese su pregunta de seguridad" required>
            </div>            
            <div>
                <label for="resp_seg">Ingrese su respuseta de seguiridad</label>
                <input type="text" name="resp_seg" id="resp_seg" maxlength="8" minlength="4" placeholder="Ingrese su respuesta de seguridad" required>
            </div>
            <div class="g-recaptcha" data-sitekey="6LdAuUopAAAAALdjW_mvoUQ2Zoe6-XC5CifuJxup"></div>
            <br/>
            <input class="btn btn-primary" type="submit" value="Registrate">
            
        </div>
    </form>


</body>
</html>