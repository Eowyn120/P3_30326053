<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mark's Quest</title>
    <link rel="stylesheet" href="/stylesheets/admin.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    

    <style>

.navbar-nav {
    display: flex;
    align-items: center;
}

.navbar-nav .nav-item {
    margin-right: 10px;
}

.navbar-nav.ms-auto {
    margin-left: auto;
}

.navbar-nav.ms-auto .nav-item {
    margin-right: 0;
}


        body{
            background-color: #1ca39e;
        }
        
        h1 {
            color: white;
        }


ul {
  list-style-type: none;
}

li {
  margin: 10px 0;
}

div.lista{
    box-shadow: 0 4px 8px #24262b, 0 6px 20px rgba(0,0,0,0,19);
    background:#24262b;
    margin: 10px;
    border-radius: 15px;

}

.lista {
  display: flex;
  flex-direction: column;
  background-color: #fff;
border: 1px solid #ccc;
}

.lista> p{
    img{
    width: 300px;
    height: 300px;
    object-fit: cover;
}
}

div.cuadricula {
    box-shadow: 0 4px 8px #24262b, 0 6px 20px rgba(0,0,0,0,19);
    float: left;
    width: 300px;
    background:#24262b;
    margin: 10px;
    border-radius: 15px;
    margin-left: 100px;
    height: 700px;
}
.cuadricula{
    display: grid;
    margin-bottom: 10px;
    padding: 10px;
    background-color: #fff;
    border: 1px solid #ccc;
}

.cuadricula> p{
    img{
    width: 100px;
    height: 100px;
    object-fit: cover;
}
}

div.producto{
    text-align: center;
    padding: 10%;
}


.texto{
    color:#fff;
    text-align: center;
}
.responsive{
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
    gap: 16px;
}


</style>


</head>
<header>

    <nav class="navbar navbar-expand-lg bg-body-tertiary" data-bs-theme="dark">

        <div>
            <h1>Mark's Quest</h1>
        </div>


        <div class="container-fluid">
            <a class="navbar-brand" href="/clientes"><strong>Pagina Reporte</strong></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav nav justify-content-center">

                    <div>
                    <li class="nav-item">
                        <form action="/search" method="post">
                            <input type="text" name="nombre" id="nombre" placeholder="Ingrese el nombre del juego" >
                            <button type="submit" class="btn btn-dark">Buscar</button>
                        </form>
                    </li>
                    </div>

                    <div>
                    <li class="nav-item">
                        <form action="/searchdescrp" method="post">
                            <input type="text" name="descripcion" id="descripcion" placeholder="Ingrese una descripcion del juego" >
                            <button type="submit" class="btn btn-dark">Buscar</button>
                        </form>
                    </li>
                    </div>

                    <div>
                    <li class="nav-item">
                        <form action="/filtroctg" method="post">
                            <select name="categoria" id="categoria">
                                <option value="" >--Categorias--</option>
                                <% if (datos) { %>
                                    <% for (let i = 0; i < datos.length; i++){  %>
                                        <% if (datos) { %>
                                            <option value="<%= datos[i].categoriaNombre %>" name="categoria" id="categoria"><%= datos[i].categoriaNombre %></option>
                                        <% } %>
                                    <% } %>
                                <% } else { %>
                                    <option value="">No existen juegos en el sistema</option>
                                <% }   %>
                            </select>
                            <button type="submit" class="btn btn-dark">Filtrar productos</button>
                        </form>
                    </li>
                    </div>

                    <div>
                        <li>
                        <form action="/filtromarca" method="post">
                            <select name="marca" id="marca">
                                <option value="" >--Marcas--</option>
                                <% if (datos) { %>
                                    <% for (let i = 0; i < datos.length; i++){  %>
                                        <% if (datos) { %>
                                            <option value="<%= datos[i].marca %>"><%= datos[i].marca %></option>
                                        <% } %>
                                    <% } %>
                                <% } else { %>
                                    <option value="">No existen juegos en el sistema</option>
                                <% }   %>
                            </select>
                            <button type="submit" class="btn btn-dark" >Filtrar productos</button>
                        </form>
                        </li>
                    </div>

                    <div>
                        <li>
                        <form action="/filtrojgd" method="post">
                            <select name="jugadores" id="jugadores">
                                <option value="" >--Jugadores--</option>
                                <% if (datos) { %>
                                    <% for (let i = 0; i < datos.length; i++){  %>
                                        <% if (datos) { %>
                                            <option value="<%= datos[i].jugadores %>"><%= datos[i].jugadores %></option>
                                        <% } %>
                                    <% } %>
                                <% } else { %>
                                    <option value="0">No existen juegos en el sistema</option>
                                <% }   %>
                            </select>
                            <button type="submit" class="btn btn-dark">Filtrar productos</button>
                        </form>
                    </li>
                    </div>

                    <div>
                    <li class="nav-item">
                        <a class="nav-link btn btn-dark" href="/loginclientes">Iniciar Sesion</a>
                        <a class="nav-link return-button" href="/logout">Salir</a>
                    </li>
                    </div>

                </ul>
            </div>
        </div>
    </nav>
    </header>

<body>
    <div class="titulo">
            <h1>Mark's Quest</h1>
    </div>
    <div>
        <button id="cambiarVista" class="btn btn-dark">Cambiar Vista</button>
    </div><br>
    <div>
        <% if (datos.length > 0) {%>
            <% for(let i = 0; i < datos.length; i++) { %>
                <div >
                    <div class="producto lista">
                            <p><img src="<%= datos[i].url %>"></p>
                            <p class="texto" style="font-weight: bolder;"><%= datos[i].productoNombre %></p>
                            <p class="texto">Precio: <%= datos[i].precio %>$</p>
                            <p class="texto"><a href="detalles/<%= datos[i].id %>" class="btn btn-success">Detalles</a></p>
                    </div>
                </div>
                
            <% } %>
        <% } else { %>
                <p>No hay productos en el sistema</p>
            <% } %>
    </div>
        
<script>
document.getElementById('cambiarVista').addEventListener('click', function() {
  let productos = document.getElementsByClassName('producto');
  for(let producto of productos) {
    if(producto.classList.contains('lista')) {
      producto.classList.remove('lista');
      producto.classList.add('cuadricula');
    } else {
      producto.classList.remove('cuadricula');
      producto.classList.add('lista');
    }
  }
});
</script>

</body>
</html>