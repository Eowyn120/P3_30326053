    <main class="separe">
        <article class="container1">
            <div class="container">
                <div class="table-responsive">
                    <div class="titulo">
                        <h1>Pagina Imagenes</h1>
                    </div>

                    <table border="2" class="table table-hover table-dark table-striped">
                        <!-- <caption>Imagenes</caption> -->
                        <tr>
                            <th>
                                <p>NÂ°</p>
                            </th>
                            <th>
                                <p>Imagen</p>
                            </th>
                            <th>
                                <p>Destacado</p>
                            </th>
                            <td>
                                <div class="input-group"><a type="button" class="btn btn-dark"
                                        href="/imgagg">Agregar</a></div>
                            </td>
                        </tr>
                        <tr>
                            <% if (imagenes) { %>
                                <% for (let i=0; i < imagenes.length; i++){ %>
                                    <% if (imagenes) { %>
                        <tr>
                            <td>
                                <%= (i + 1) %>
                            </td>
                            <td><img class="imagen-producto" src="<%= imagenes[i].url %>"></td>
                            <td>
                                <%= imagenes[i].destacado %>
                            </td>
                            <td>
                                <div class="input-group">
                                    <a href="/imgdelete/<%= imagenes[i].id%>" type="button"
                                        class="btn btn-dark">Eliminar</a>
                                    <a href="/imgedit/<%= imagenes[i].id%>" type="button"
                                        class="btn btn-dark">Actualizar</a>
                                </div>
                            </td>
                        </tr>
                        <% } %>
                            <% } %>
                                <% } else { %>
                                    <tr>
                                        <th>
                                            <p>No hay imagenes en el sistema.</p>
                                        </th>
                                    </tr>
                                    <% } %>
                                        </tr>
                    </table>
                </div>
            </div>
        </article>
    </main>
