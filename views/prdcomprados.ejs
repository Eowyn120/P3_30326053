    <style>
        body {
            background-color: #161737;
        }


        .return-button {
            position: fixed;
            top: 20px;
            right: 20px;
            padding: 10px 20px;
            background-color: blue;
            color: white;
            border: none;
            border-radius: 4px;
            font-size: 16px;
            cursor: pointer;
        }

        .return-button:hover {
            background-color: darkblue;
        }
    </style>
</head>

<body>
    <div class="color">
        <header>
            <div class="container1">

                <h1 class="h1 logo">
                    <a href="/clientes">Mark's Quest<span>.</span></a>
                </h1>
                    <nav class="navbar navbar-expand-lg bg-body-tertiary" data-bs-theme="dark">
                            
                                <li class="nav-item">
                                    <a class="nav-link btn btn-dark" href="/loginclientes">Iniciar Sesion</a>
                                    <a class="nav-link btn btn-dark" href="/logout">Salir.</a>
                                </li>
                            

                            </ul>
                        </div>
                
                </nav>
            </div>
        </header>
    </div>

    <main class="separe">
        <article class="container1">
            <div class="container">
                <div class="table-responsive">
                    <div class="titulo">
                        <h1>Productos Comprados</h1>
                    </div>
                    <table border="2" class="table table-hover table-dark table-striped">
                        <!-- <caption><h1>Reporte General</h1></caption> -->
                        <tr>
                            <th>
                                <p>NÂ°</p>
                            </th>
                            <th>
                                <p>Imagen</p>
                            </th>
                            <th>
                                <p>Producto</p>
                            </th>
                            <th>
                                <p>Cantidad</p>
                            </th>
                            <th>
                                <p>Total Pagado</p>
                            </th>
                            <th>
                                <p>Moneda</p>
                            </th>
                            <th>
                                <p>Fecha</p>
                            </th>
                            <th>
                                <p>Accion</p>
                            </th>
                        </tr>
                        <tr>
                            <% if (datos) { %>
                                <% for (let i=0; i < datos.length; i++){ %>
                        <tr>
                            <td>
                                <%= (i + 1) %>
                            </td>
                            <td>
                                <img class="imagen-producto" src="<%= datos[i].url %>">
                            </td>
                            <td>
                                <%= datos[i].nombre %>
                            </td>
                            <td>
                                <%= datos[i].cantidad %>
                            </td>
                            <td>
                                <%= datos[i].total_pagado %>
                            </td>
                            <td>
                                <%= datos[i].nomenclatura %>
                            </td>
                            <td>
                                <%= datos[i].fecha %>
                            </td>
                            <td>
                                <div class="input-group">
                                    <a href="/calificar/<%= datos[i].id %>" type="button"
                                        class="btn btn-dark">Calificar</a>
                                </div>
                            </td>
                        </tr>
                        <% } %>
                            <% } else { %>
                                <tr>
                                    <th>
                                        <p>Usted no ha comprado productos</p>
                                    </th>
                                </tr>
                                <% } %>
                                    </tr>
                    </table>
                </div>
            </div>
        </article>
    </main>
    <!-- 
